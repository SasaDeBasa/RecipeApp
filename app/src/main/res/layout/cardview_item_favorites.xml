<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/favorites_cv"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002">

        <FrameLayout
            android:id="@+id/ingredient_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/favorites_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="card image"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/icon_bookmark"
                android:layout_width="36dp"
                android:layout_height="43dp"
                android:layout_gravity="end|top"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/baseline_favorite_24"
                app:tint="@color/light_green"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/favorites_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#C3232020"
                android:fontFamily="@font/uber_bold"
                android:gravity="start"
                android:padding="30dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </FrameLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
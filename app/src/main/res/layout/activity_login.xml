<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/login_sign_in_pic" />

    <!-- Black Overlay -->

    <View
        android:id="@+id/black_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="528dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="284dp"
        android:layout_marginBottom="1288dp"
        android:text="Sign in to your account"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="228dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="304dp"
        android:layout_marginBottom="1052dp"
        android:text="READY TO COOK SOMETHING  AWESOME"
        android:textColor="#FFFFFF"
        android:textSize="60sp" />

    <EditText
        android:id="@+id/loginEmailEt"
        android:layout_width="592dp"
        android:layout_height="148dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="136dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="796dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:text="Email address"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/loginPasswordEt"
        android:layout_width="592dp"
        android:layout_height="176dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="136dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="576dp"
        android:ems="10"
        android:hint="password"
        android:inputType="numberPassword"
        android:text="Password"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="476dp"
        android:layout_height="112dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="188dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="412dp"
        android:background="#8B9A46"
        android:text="LOG IN"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold" />

    <!-- Your other UI elements can go here -->

</RelativeLayout>